generator client {
  provider = "prisma-client"
  output   = "../src/prisma/generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}


model User {
  id Int @default(autoincrement()) @id
  email String @unique
  name String
  password String
  applications Application[]

}

model Application {
  id Int @default(autoincrement()) @id
  title String
  link String
  recruiter String
  company String
  status Status @default(APPLIED)
  followUpStatus FollowUpStatus @default(TO_DO)
  user User? @relation(fields: [userId], references: [id])
  userId Int

  @@unique([userId, link])
}

enum Status {
  APPLIED
  INTERVIEWING
  TECHNICAL_TEST
  REJECTED
  ACCEPTED
}

enum FollowUpStatus {
  DONE
  TO_DO
}